            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/malvani_fish_thali_60_00"
            android:textColor="#000000"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:text="NON VEG - A coastal feast showcasing the best of Malvani cuisine with spicy fish curry, crispy fried fish, and traditional accompaniments, delivering a burst of coastal flavors in every bite. "
            android:textStyle="italic" />


        <Button
            android:id="@+id/product6Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A D D"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:backgroundTint="#6D0016"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/product7Image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/pithlabhakri"
            android:contentDescription="@string/product7_description"
            android:scaleType="centerCrop"
