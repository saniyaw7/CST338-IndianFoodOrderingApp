        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pithla_bhakri_70_00"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:text="@string/veg_a_hearty_maharashtrian_staple_combining_gram_flour_curry_with_unleavened_millet_bread_for_a_satisfying_and_wholesome_meal"
            android:textStyle="italic" />


        <Button
            android:id="@+id/product7Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A D D"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:backgroundTint="#6D0016"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/product8Image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/pavbhaji"
            android:contentDescription="@string/product8_description"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pav_bhaji_80_00"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:text="VEG - A Mumbai street food classic, featuring a spicy vegetable mash served with buttered bread rolls, delivering a burst of flavors in every bite."
