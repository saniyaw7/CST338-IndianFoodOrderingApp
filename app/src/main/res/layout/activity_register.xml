<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".RegisterActivity"
    android:gravity="center"
    android:background="#FF914D">

    <!-- Navigation Bar -->

    <RelativeLayout
        android:id="@+id/navBar"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-70dp"
        android:background="#FF914D">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:onClick="onBackPressed"
            android:background="#FF914D"
            android:src="@android:drawable/ic_media_previous" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/product8Image"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="-40dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/product8_description"
        android:scaleType="centerCrop"
        android:src="@drawable/pblogo" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/navBar"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:hint="@string/enter_username"
        android:inputType="text" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameEditText"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:hint="@string/enter_password"
        android:inputType="textPassword" />

    <!-- Show Password CheckBox -->

    <CheckBox
        android:id="@+id/showPasswordCheckBox"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="10dp"
        android:text="@string/show_password" />

    <TextView
        android:id="@+id/passwordCriteriaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditText"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="-100dp"
        android:text="@string/password_criteria_n_at_least_8_characters_n_a_mixture_of_uppercase_and_lowercase_letters_n_a_mixture_of_letters_and_numbers_n_at_least_one_special_character"
        android:textColor="#6D0016"
        android:layout_marginStart="20dp"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordCriteriaTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#6D0016"
        android:gravity="center"
        android:text="@string/register" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-63dp"
        android:layout_marginStart="50dp"
        android:textColor="#230007"
        android:text="@string/previous_page" />

</RelativeLayout>
