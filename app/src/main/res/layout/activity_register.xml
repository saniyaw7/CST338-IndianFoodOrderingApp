<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".RegisterActivity"
    android:gravity="center"
    android:background="#FF914D">

    <!-- Navigation Bar -->

    <RelativeLayout
        android:id="@+id/navBar"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-70dp"
        android:background="#FF914D">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:onClick="onBackPressed"
            android:background="#FF914D"
            android:src="@android:drawable/ic_media_previous" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/product8Image"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/product8_description"
        android:scaleType="centerCrop"
        android:src="@drawable/pblogo" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/navBar"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:hint="Enter username"
        android:inputType="text" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameEditText"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:hint="Enter password"
        android:inputType="textPassword" />

    <!-- Show Password CheckBox -->

    <CheckBox
        android:id="@+id/showPasswordCheckBox"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/passwordEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="1dp"
        android:text="Show Password" />

    <TextView
        android:id="@+id/passwordCriteriaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditText"
        android:layout_marginBottom="8dp"
        android:text="Password criteria:\n- At least 8 characters\n- A mixture of uppercase and lowercase letters\n- A mixture of letters and numbers\n- At least one special character: ! @ # ? ]"
        android:textColor="#6D0016"
        android:layout_marginLeft="20dp"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordCriteriaTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#6D0016"
        android:gravity="center"
        android:text="Register" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-63dp"
        android:layout_marginLeft="50dp"
        android:textColor="#230007"
        android:text="Previous Page" />

</RelativeLayout>
